<%= link_to store_path(store) do %>
    <div class="per_store">
        <div class="title">
            <%= store.title %>
        </div>
        <div class="artist">
            <%= store.artist %>
        </div>
        <div class="content clearfix">
            <div class="image">
                <% if store.store_images.first.image? %>
                    <%= image_tag store.store_images.first.image.url %>
                <% end %>
            </div>
          
            <div class="genres">
                <p>ジャンル</p>
                <%= render 'stores/genre_list', store: store %>
            </div>
          
         </div>
    </div>
<% end %>